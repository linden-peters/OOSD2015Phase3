<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="[Agency Goes Here]" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgency" />

    <TextView
        android:text="[Agent Goes Here]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgent"
        android:layout_below="@+id/tvAgency"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAgentId"
        android:background="#bfffdf"
        android:layout_below="@+id/tvAgent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/button"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/etAgentId"
        android:layout_alignParentStart="true" />

</RelativeLayout>
